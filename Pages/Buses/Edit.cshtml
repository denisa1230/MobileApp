@page
@model Proiect.Pages.Buses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Bus.ID" />
            <div class="form-group">
                <label asp-for="Bus.DepartureID" class="control-label">The Place Of Departure</label>
                <select asp-for="Bus.DepartureID" class="form-control" asp-items="ViewBag.DepartureID">
                </select>
                <span asp-validation-for="Bus.DepartureID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bus.Arrival" class="control-label"></label>
                <input asp-for="Bus.Arrival" class="form-control" />
                <span asp-validation-for="Bus.Arrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bus.ArrivalDates" class="control-label"></label>
                <input asp-for="Bus.ArrivalDates" class="form-control" />
                <span asp-validation-for="Bus.ArrivalDates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bus.DepartureDates" class="control-label"></label>
                <input asp-for="Bus.DepartureDates" class="form-control" />
                <span asp-validation-for="Bus.DepartureDates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bus.Price" class="control-label"></label>
                <input asp-for="Bus.Price" class="form-control" />
                <span asp-validation-for="Bus.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
